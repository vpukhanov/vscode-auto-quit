{
	"name": "auto-quit",
	"displayName": "Auto-quit",
	"description": "Quit VS Code automatically when the last window is closed (on macOS)",
	"version": "1.0.0",
	"engines": {
		"vscode": "^1.46.0"
	},
	"categories": [
		"Keymaps",
		"Other"
	],
	"activationEvents": [
		"*"
	],
	"contributes": {
		"keybindings": [
            {
                "command": "autoQuit.keybindings.closeWindow",
                "title": "Close Window",
                "key": "ctrl+W",
                "mac": "cmd+W",
                "when": "!editorIsOpen && !multipleEditorGroups"
			},
			{
				"command": "autoQuit.keybindings.newWindow",
				"title": "New Window",
				"key": "ctrl+shift+N",
				"mac": "cmd+shift+N"
			}
        ]
	},
	"main": "./out/extension.js",
	"icon": "icons/icon.png",
	"repository": {
		"type": "git",
		"url": "https://github.com/vpukhanov/vscode-auto-quit.git"
	},
	"scripts": {
		"vscode:prepublish": "npm run compile",
		"compile": "tsc -p ./",
		"lint": "eslint src --ext ts",
		"watch": "tsc -watch -p ./"
	},
	"devDependencies": {
		"@types/vscode": "^1.46.0",
		"@types/glob": "^7.1.1",
		"@types/mocha": "^7.0.2",
		"@types/node": "^13.11.0",
		"eslint": "^6.8.0",
		"@typescript-eslint/parser": "^2.30.0",
		"@typescript-eslint/eslint-plugin": "^2.30.0",
		"glob": "^7.1.6",
		"mocha": "^7.1.2",
		"typescript": "^3.8.3",
		"vscode-test": "^1.3.0"
	}
}
